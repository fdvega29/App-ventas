<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto mt-2">
            <hr>
            <h3 class="text-white text-center">Registro</h3>
            <hr>
                <form action="/users/signup" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Correo" value="{{email}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" value="{{password}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirmar Contraseña" value="{{confirmPassword}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Acceder</button>
                        </div>
                </form>
            </div>
        </div>
</div>